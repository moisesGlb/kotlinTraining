<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/proxima_nova_reg</item>
    </style>

    <!--Text Style-->

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="defaultQueryHint">@string/menu_search</item>
    </style>

    <style name="SplashTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_content</item>
        <item name="android:textAlignment">center</item><item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ProductDetailBase">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/divider</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="productDetailDescription">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Nav Bar Styles-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="defaultQueryHint">@string/menu_search</item>
        <item name="fontFamily">@font/proxima_nova_thin</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" >
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

</resources>
